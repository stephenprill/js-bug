{
  "name": "puck",
  "version": "1.0.0",
  "description": "Very small HTML5 template for very small HTML5 sites.",
  "main": "app.js",
  "scripts": {
    "sass": "node-sass src/sass/*.scss -o dist/ -w",
    "serve": "http-server",
    "babel": "babel src/js/*.js -o dist/app.js -w --experimental",
    "watch": "npm run sass & npm run babel & npm run serve"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/gSchool/puck.git"
  },
  "author": "Aaron Gray <aaron@hellometa.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/gSchool/puck/issues"
  },
  "homepage": "https://github.com/gSchool/puck",
  "devDependencies": {
    "babel": "^4.6.6",
    "http-server": "^0.7.5",
    "node-sass": "^2.0.1"
  }
}
